		<h5 class="newAccount texts"> Or create a new account! </h5>
		<button class="newAccount buttons" type="submit" onclick="toggle()">SIGN UP</button>

		<a href="home"> <button style="display: none;" class="newAccount buttons" type="submit" >CONTINUE</button></a>
		
		<br>

		<!-- to hide the button -->
		<script>
		function toggle() {
		    var elements = document.querySelectorAll('.newAccount');

		    for (var i = 0; i < elements.length; i++) {
		    	if (elements[i].style.display === "none") {
		    		elements[i].style.display = "block";
		    	}
		    	else {
		    		elements[i].style.display = "none";
		    	}
		    }
		    console.log("ssd");
		}
		</script>

