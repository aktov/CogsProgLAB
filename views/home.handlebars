<!doctype html>

<html>
<head>
	<title>LAByrinth</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet"> 
	<link href="/css/main.css" type="text/css" rel="stylesheet">
</head>

<body>
	<div id="navbar" class="scrollmenu">
		<a href='profileB'>Profile</a>
		<a class="active" href='recipeSearchB'>Recipes</a>
		<a href='optionsB'>Options</a>
	</div>

	<div class="submenu">
		<a href='favoritesB'>Favorites</a>
		<a href='recentB'>Recent</a>
	</div>

	<div class="container" style="width: 80%;">
		<img src="/images/Prepd.png" id=title width="100%" height="auto" align="center" style="margin: 50px 0px 15px 0px">
		<!-- old image
		<img  id="logo" src="/images/Fire logo.png" alt="logo" style="margin-top: 100px">
		-->

		<a href="recipeSearchB"> <button style="margin-top: 20px" class="newAccount buttons" type="submit">
			CREATE MEAL PLAN  
		</button></a>
		<br>
		<h5 class="texts"> PLANNED MEALS</h5>
		<div class="listDiv"> 
			<label class="listHeader"> Turkey Burgers </label>
			<label class="listLabel" style="display: inline-block; float: left; width: 100px;"> MEALS LEFT: </label>
			<label class="listLabel" style="display: inline-block; font-size: 50px; width: 50px; text-align: center; float: left;">2</label>
		</div>

		{{#each recipes}}
			<div class="listDiv"> 
				<label class="listHeader"> {{name}} </label>
				<label class="listLabel">  </label>
			</div>
	      <div class="recipeList" id="{{name}}" >
	        <a class="thumbnail" href="{{recipeURL}}">
	          <img class="img-responzive" src="{{imageURL}}" />
	          <h3>{{name}}</h3>
	          <p>{{description}}</p>
	          <label>{{servings}}</label>
	          <br>
	          <label>{{cookTime}}</label>
	          <br>
	          <label>{{difficulty}}</label>
	        </a>
	      </div>
	      <hr />
	    {{/each}}

	</div>

	<!-- to hide the button -->
	<script>
	function toggle() {
	    var elements = document.querySelectorAll('.newAccount');

	    for (var i = 0; i < elements.length; i++) {
	    	if (elements[i].style.display === "none") {
	    		elements[i].style.display = "block";
	    	}
	    	else {
	    		elements[i].style.display = "none";
	    	}
	    }
	    console.log("ssd");
	}
	</script>

