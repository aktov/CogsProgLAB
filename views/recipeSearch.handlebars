<!doctype html>

<html>
<head>
	<title>LAByrinth</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet"> 
	<link href="/css/main.css" type="text/css" rel="stylesheet">
	
</head>
<body>
	<div class="navBar container-fluid">
		<div class="row">
			<div class="col-xs-4 noncurrent">
				<b><a href="stats"><img src="../images/person.png" height="10%" width="10%" alt="Profile" /></a></b>
			</div>
			<div class="col-xs-4 current">
				<b><a href="recipeSearch"><img src="../images/cookbook.png" height="9%" width="9%" alt="Recipes" /></a></b>
			</div>
			<div class="col-xs-4 noncurrent">
				<b><a href="help"><img src="../images/cog.png" height="10%" width="10%" alt="Options" /></a></b>
			</div>
		</div>
	</div>
	<br />
	<!-- <div class="container">
		<label><b>Search for recipes</b></label>
		<input type="text" placeholder="enter recipe here">
		<button type="submit">Search!</button>
	</div> -->
	<br />
	
	{{#each recipes}}
      <div class="recipes" id="{{name}}" >
        <a class="thumbnail" href="{{recipeURL}}">
          <img class="img-responzive" src="{{imageURL}}" />
          <h3>{{name}}</h3>
          <p>{{description}}</p>
          <label>{{servings}}</label>
          <br>
          <label>{{cookTime}}</label>
        </a>
        <label><input id="completed" type="checkbox" onclick="dishcount(this)"></input> Completed </label>
      </div>
      <hr />
    {{/each}}


<script src="js/jquery-1.11.0.js"></script>
<script src="js/bootstrap.js"></script>
<script src="js/recipes.js"></script>
<script src="js/scripts.js"></script>
	
</body>
</html>