<!doctype html>

<html>
<head>
	<title>LAByrinth</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet"> 
	<link href="/css/main.css" type="text/css" rel="stylesheet">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	
</head>
<body>
	<div id="navbar" class="scrollmenu">
		<a href='profile'>PROFILE</a>
		<a href='home'>HOME</a>
		<a href='options'>OPTIONS</a>
	</div>

	<div class="submenu">
		<a class="active" href='favorites'>FAVORITES</a>
		<a href='recent'>RECENT</a>
	</div>

	<h1 align="center" class="header"> FAVORITES </h1>

	<div class="container" style="width: 90%">
		{{#each favoriterecipes}}
	      <div class="favoriterecipes">
	        <a class="thumbnail" style="border-radius: 5px" href="{{recipeURL}}">
	          <img class="img-responzive" style="border-radius: 10px" src="{{imageURL}}" />
	          <h3>{{name}}</h3>
	          <p>{{description}}</p>
	          <label>{{servings}}</label>
	          <br>
	          <label>{{cookTime}}</label>
	          <br>
	          <label>{{difficulty}}</label>
	        </a>
	      </div>
	    {{/each}}
	</div>

	<p style="margin-bottom: 100px;"></p>


<script src="js/jquery-1.11.0.js"></script>
<script src="js/bootstrap.js"></script>

